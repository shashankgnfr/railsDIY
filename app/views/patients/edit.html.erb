<% provide(:title, "Edit patient") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@patient) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :number %>
      <%= f.text_field :number %>

      <%= f.label :illness %>
      <%= f.text_field :illness %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>

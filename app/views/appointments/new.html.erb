<% provide(:title, 'Appointment record') %>
<h3>Request an Appointment</h3>

<div class="column">
  <div class="form-group">
    <%= form_for(@appointment) do |f| %>
     <strong>Time:</strong>
   
      <%= f.time_field :date, placeholder: "select appointment slot..." %>      

      <p><%= f.label :doctor_id %>
      <%= f.number_field :doctor_id %>
      </p>
      <%= f.hidden_field :patient_id, value: params[:patient_id] %>

      <%= f.submit "Request an appointment", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>


<div class="table-responsive">          
 <table class="table table-bordered"> 
  <thead>
    <tr>
      <th>Name</th>
      <th>ID</th>
      <th>Timing</th>
      <th colspan="3"></th> 
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.id %></td>
        <td><%= doctor.timing %></td>
      </tr>
    <% end %>
  </tbody>
</table>